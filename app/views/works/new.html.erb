    <%= javascript_include_tag 'ckeditor/init' %>
    <%= simple_form_for @work do |f| -%>

    <%= f.error_notification class: 'alert alert-danger' %>

    <div class="form-inputs">
      <div class="form-group">
        <h4><span>標題</span><span class="help-block">例如：PHP後台系統設計、商品攝影+修圖、女性服飾網拍修圖</span></h4>
        <%= f.input_field :subject, class: 'form-control string optional', placeholder: '標題' %>
      </div>
      <div class="form-group">
        <h4><span>內容</span><span class="help-block">描述案子的作業時程，限制條件等</span></h4>
        <%= f.input_field :content, as: :ckeditor, input_html: { ckeditor: { toolbar: 'Full' } }%>
      </div>
    </div>
    <div class="form-actions">
      <p><%= f.button :submit, '送出', class: 'btm_c_org width50' %> <%= link_to "回列表頁", appraisals_path, class: 'btn btn-link' %></p>
    </div>
    <% end %>