<%= form_for appraisal_message, remote: true do |f| %>
  <%= appraisal_message.user.name %>: <%= appraisal_message.content %>
  <% if current_user == appraisal_message.user %>
    <%= link_to "(remove)", appraisal_message, method: :delete, data: {confirm: "Are you sure?"}, remote: true %>
  <% end %>
<% end %>