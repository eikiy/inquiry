<div class="col-lg-3 col-md-4 col-sm-6">
  <div class="work-item">
    <%= link_to user_info_work_path(w.user, w), class: "item-wrap", remote: true do %>
      <p class="subject"> <%= w.subject %> </p>
      <div class="overview">
        <%= work_square(w) %>
      </div>
    <% end -%>
    <% if current_user && w.user != current_user %>
      <div class="cog">
        <%= link_to report_work_path(w),method: :post, data: {toggle: "tooltip", placement:"bottom", confirm: '確定對他沒興趣嗎？此後在公開版面將看不到關於他發佈的作品。' }, title: '沒興趣'  do %>
            <i class="glyphicon glyphicon-remove"></i>
        <% end -%>
      </div>
    <% end %>
    <%= render 'account/works/work_info', w: w %>
  </div>
</div>