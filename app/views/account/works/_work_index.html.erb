<div class="col-lg-3 col-md-4 col-sm-6">
  <div class="work-item">
    <%= link_to user_info_work_path(w.user, w), class: "item-wrap", remote: true do %>
      <p class="subject"> <%= truncate(w.subject,length: 14) %> </p>
      <div class="overview">
        <%= work_square(w) %>
      </div>
    <% end -%>
    <%= render 'account/works/work_info', w: w %>
  </div>
</div>