  <br>
  <br>
  <%= link_to '編輯', edit_account_user_info_work_path(w.user, w),class: 'btn btn-success' %>
  <br>
  <br>
  <%= link_to '刪除', account_user_info_work_path(w.user, w),class: 'btn btn-danger', method: :delete, data: { confirm: '確定要刪除嗎？' } %>
  <br>
  <br>
<% end %>
