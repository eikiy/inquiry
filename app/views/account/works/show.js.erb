$("#myModalLabel").text("<%= @work.subject %>");
$('.modal-body').html("<%= j(render :partial => 'show') %>");
<% if !@work.is_care_by?(current_user) %>
    $('.modal-footer').html(' \
    <button type="button" class="btn btn-default" data-dismiss="modal">Feel Soso.</button> \
    <%= link_to update_care_work_path(@work), method: :post, remote: true, onclick: "onHeartClick('work_info_#{@work.id}')", data: {dismiss: "modal" }, class: "btn btn-info" do %> \
    Good Job! <i class="glyphicon glyphicon-heart text-danger"></i>\
    <% end -%> \
');
<% else %>
$('.modal-footer').html('<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>');
<% end %>


