<div id="<%= dom_id(w) %>" class="col-md-4 col-sm-6 work-responsive">
  <div class="work-item">
    <%= link_to user_info_work_path(w.user, w), class: "item-wrap", remote: true do %>
      <p class="subject">
        <%= truncate(w.subject,length: 14) %>
      </p>
      <% if current_user == w.user %>
        <div class="dropdown cog">
          <%= link_to "#" , :class => "dropdown-toggle", :data => { :toggle => "dropdown" } do %>
            <% if w.is_published? %>
              <i class="glyphicon glyphicon-globe"></i>
            <% else %>
              <i class="glyphicon glyphicon-inbox"></i>
            <% end -%>
            <ul class="dropdown-menu">
              <li>
                <%= link_to update_published_work_path(w), method: :post, remote: true do %>
                  <% if !w.is_published? %>
                    <i class="glyphicon glyphicon-globe"></i>公開發佈
                  <% else %>
                    <i class="glyphicon glyphicon-inbox"></i>設為草稿
                  <% end -%>
                <% end -%>
              </li>
              <li><%= link_to '編輯', edit_account_user_info_work_path(w.user, w) %></li>
              <li class="divider"></li>
              <li><%= link_to '刪除', account_user_info_work_path(w.user, w), method: :delete, data: { confirm: '確定要刪除嗎？' } %></li>
            </ul>
          <% end -%>
        </div>
      <% end %>
      <div class="overview">
        <%= work_square(w) %>
      </div>
    <% end -%>
    <p class="info">
      <span class="info-type">
        <%= content_tag :i, '',class: 'glyphicon glyphicon-link' if w.attach_url.present? %>
      </span>
      <i class="glyphicon glyphicon-eye-open"></i><span><%= w.hits %></span>
      <i class="glyphicon glyphicon-comment"></i><span><%= w.work_messages_count %></span>
      <%= link_to update_care_work_path(w), method: :post, remote: true, class: 'heart' do %>
        <i class="glyphicon glyphicon-heart <%= 'text-danger' if w.is_care_by? (current_user) %>"></i>
      <% end -%>
      <%= link_to carers_work_path(w), class: 'heart_count_link' do %>
        <span class="heart_count"><%= w.cares_count %></span>
      <% end -%>
    </p>
  </div>
</div>