
<div class='col-sm-9 col-xs-12'>
  <div class="row">
    <div class="introduction wow fadeInUp" data-wow-duration="0.5s" data-wow-offset="200">
      <% if current_user == @user_info.user %>
        <%= link_to '新增作品', new_work_path %>
      <% end -%>
      <h2 class="h2"><%= @user_info.nickname %></h2>
      <div class="heading-line"></div>
      <p class="introduce">工作內容</p>
      <p class="intro"><%= simple_format @user_info.work_content %></p>
    </div>
    <div class="why-me wow fadeInUp" data-wow-duration="0.5s" data-wow-offset="200">
      <!-- Start Accordion -->
      <div class="accordion">
        <div class="acc-item">
          <div class="acc-title"><i class="ion-android-navigate"></i>作品</div>
          <div class="acc-content-show">
            <% @user_info.user.works.each do |w| %>
              <%= link_to w.subject, user_info_work_path(@user_info.user, w)  %>
            <% end -%>
          </div>
        </div>
        <div class="acc-item">
          <div class="acc-title"><i class="ion-android-navigate"></i>相關經歷與作品連結</div>
          <div class="acc-content-show"><%= rasf @user_info.typical_work %></div>
        </div>
        <div class="acc-item">
          <div class="acc-title"><i class="ion-android-navigate"></i>擅長技能或使用工具</div>
          <div class="acc-content-show"><%= simple_format @user_info.skill_and_tool %></div>
        </div>
      </div>
      <!-- End Accordion -->
    </div>
  </div>
</div>