    <%= simple_form_for @user_info, :url => { :action => "update_info" }, :method => :patch  do |f| -%>

    <%= f.error_notification class: 'alert alert-danger' %>

    <div class="form-inputs">
      <%=  f.hidden_field :name %>
      <div class="form-group">
        <%= f.input :category, label: '類別' do %>
          <%= f.select :category_id, Category.where("id < ?", 100).map { |r| [r.title, r.id] } %>
        <% end %>
        <p class="help-block">依對照表填入序號</p>
      </div>
      <div class="form-group">
        <%= f.label '服務地區' %>
        <%= f.input_field :work_area, class: 'form-control text optional' %>
        <p class="help-block">服務地區</p>

      </div>
      <div class="form-group">
        <%= f.label '工作內容' %>
        <%= f.input_field :work_content, class: 'form-control string optional' %>
        <p class="help-block">工作內容</p>
      </div>
      <div class="form-group">
        <%= f.label '相關經歷' %>
        <%= f.input_field :typical_work, class: 'form-control text optional' %>
        <p class="help-block">相關經歷</p>

      </div>
      <div class="form-group">
        <%= f.label '擅長技能或工具' %>
        <%= f.input_field :skill_and_tool, class: 'form-control text optional' %>
        <p class="help-block">擅長技能或工具</p>
      </div>
        <%=  f.hidden_field :teach %>
        <%=  f.hidden_field :speak %>
        <%=  f.hidden_field :labor %>
        <%=  f.hidden_field :contract %>
    </div>
    <div class="form-actions">
      <p><%= f.button :submit, '送出', class: 'btm_c_org width50' %></p>
      <p class="cancel"><%= link_to "回上頁", :back, class: 'btn btn-info' %></p>
    </div>
    <% end %>