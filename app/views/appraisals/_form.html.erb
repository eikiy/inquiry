    <%= simple_form_for @appraisal do |f| -%>

    <%= f.error_notification class: 'alert alert-danger' %>

    <div class="form-inputs">
      <div class="form-group">
        <p class="help-block">請點選分類</p>
        <%= f.hidden_field :category_id %>
        <%= render 'category', appraisal: @appraisal  %>
      </div>
      <div class="form-group">
        <%= f.input_field :title, class: 'form-control string optional', placeholder: '標題' %>
        <p class="help-block">例如：PHP後台系統設計、商品攝影+修圖、女性服飾網拍修圖</p>
      </div>
      <div class="form-group">
        <%= f.input_field :description, class: 'form-control text optional', placeholder: '請輸入內容' %>
        <p class="help-block">描述案子的作業時程，限制條件等</p>

      </div>
    </div>
    <div class="form-actions">
      <p><%= f.button :submit, '送出', class: 'btm_c_org width50' %></p>
      <p class="cancel"><%= link_to "回上頁", appraisals_path, class: 'btn btn-info' %></p>
    </div>
    <% end %>