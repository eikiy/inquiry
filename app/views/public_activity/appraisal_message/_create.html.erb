<% if activity.trackable %>
  <%= link_to activity.trackable.appraisal, class: "list-group-item" do %>
    <%= "#{activity.owner.nickname} 在你的估價 #{activity.trackable.appraisal.title} 留言 '#{activity.trackable.content}'" %>
    <small><%= activity_created_at activity %></small>
  <% end -%>
<% else %>
  <%= activity.owner.nickname %>
  新增了一個留言 已被刪除
<% end %>